{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "ES2021",
      "es6",
      "dom",
    ]
  },
  "exclude": [
    "node_modules",
    "src-v0",
    "**/*.spec.ts",
    "**/*.test.ts",
    ".js"
  ]
}